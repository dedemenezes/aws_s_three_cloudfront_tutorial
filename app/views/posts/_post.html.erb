<%= turbo_frame_tag dom_id(post) do %>
  <p><%= post.title %>
    <%= link_to edit_post_path(post) do %>
      <%= icon('fa-solid', 'pencil') %>
    <% end %>
    <%= link_to post_path(post), data: { turbo_method: :delete, turbo_confirm: 'Such a nice post. Are you sure?' } do %>
      <%= icon('fa-solid', 'trash') %>
    <% end %>
  </p>
  <p><%= post.content %></p>
<% end %>
